<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createProperty.CreatePropertyFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loginBackground">
        <TextView
            android:id="@+id/new_property_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_property_header"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/new_property_error"
            android:layout_below="@+id/new_property_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/new_property_name_label"
            android:layout_below="@id/new_property_error"
            android:text="@string/new_property_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/new_property_name_field"
            android:layout_below="@id/new_property_name_label"
            android:hint="@string/new_property_name"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounder_edittext"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/new_property_address_label"
            android:layout_below="@id/new_property_name_field"
            android:text="@string/new_property_address"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/new_property_address_field"
            android:layout_below="@id/new_property_address_label"
            android:hint="@string/new_property_address"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounder_edittext"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/new_property_price_label"
            android:layout_below="@id/new_property_address_field"
            android:text="@string/new_property_price"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp" />

        <EditText
            android:id="@+id/new_property_price_field"
            android:layout_below="@id/new_property_price_label"
            android:inputType="number"
            android:hint="@string/new_property_price"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounder_edittext"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/new_property_button"
            android:layout_below="@id/new_property_price_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_property_button"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>
    </RelativeLayout>
</FrameLayout>