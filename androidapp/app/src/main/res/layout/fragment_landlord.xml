<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userprofile.LandlordFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loginBackground">

    <TextView
        android:id="@+id/tv_landlord_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landlord profile" />

        <TextView
            android:id="@+id/tv_landlord_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_landlord_profile"
            android:text="..." />

        <ListView
            android:id="@+id/lv_properties"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_landlord_title"
            android:visibility="gone" />

    </RelativeLayout>

</FrameLayout>